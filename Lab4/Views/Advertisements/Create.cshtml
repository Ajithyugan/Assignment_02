@model Assignment02NET.Models.Brokerage


@{
    ViewData["Title"] = "Create";
}

<h1>Upload</h1>

<h4>Upload an add for brokerage @Model.Title</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form enctype="multipart/form-data" value="Create" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
            <div class="btn btn-sm float-left"><input name="files" type="file"></div>
            </div>
            <div class="form-group">
                <h1><input type="submit" value="Upload Now" class="btn btn-primary" /></h1>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" asp-route-id="@Model.ID">Back to List</a> 
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
