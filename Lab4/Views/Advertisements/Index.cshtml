@model Assignment02NET.Models.ViewModels.AdsViewModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index 
    <br>
    <br>Show ads for brokerage @Model.Brokerages.Title</h1>
<p>
    <a asp-action="Create" asp-route-id="@Model.Brokerages.ID"> Upload New </a> 
<p>

<p>
    <a asp-controller="Brokerages" asp-action="Index">Back to List</a>
</p>
@if (Model.Advertisements.Count() == 0)
{
    <p>There are no files to display.</p>
}
else
{
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Advertisements.FirstOrDefault().FileName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Advertisements.FirstOrDefault().Url)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Advertisements.FirstOrDefault().Brokerage)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Advertisements) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FileName)
            </td>
            <td>
                <img src="@item.Url" style="max-width: 400px;" />
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Brokerage.ID)
            </td>
            <td>
                <a asp-action="Delete" asp-route-id="@item.advertisementID">Delete</a> |
                
            </td>
        </tr>
}
    </tbody>
</table>
}